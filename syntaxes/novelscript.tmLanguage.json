{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "NovelScript",
  "scopeName": "source.novelscript",
  "patterns": [
    {
      "name": "entity.name.label",
      "match": "^#\\w+"
    },
    {
      "name": "keyword.control.novel",
      "match": "^@[a-zA-Z_]+"
    },
    {
      "name": "entity.name.function.character.novel",
      "match": "^[a-zA-Z0-9_]+\\s*:"
    },
    {
      "name": "string.unquoted.choice.novel",
      "match": "^ {4}.*$"
    },
    {
      "name": "comment.line.double-slash.novel",
      "match": "//.*$"
    }
  ]
}
